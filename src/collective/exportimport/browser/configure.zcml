<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="collective.exportimport">

  <!-- Set overrides folder for Just-a-Bunch-Of-Templates product -->
  <include package="z3c.jbot" file="meta.zcml" />
  <browser:jbot
      directory="overrides"
      layer="collective.exportimport.interfaces.ICollectiveExportimportLayer"
      />

  <!-- Publish static files -->
  <plone:static
      name="collective.exportimport"
      type="plone"
      directory="static"
      />

  <!-- Exports -->
  <browser:page
      name="export_content"
      for="zope.interface.Interface"
      class=".export_forms.ExportContent"
      template="templates/export_content.pt"
      permission="cmf.ManagePortal"
      />

  <browser:page
      name="export_relations"
      for="zope.interface.Interface"
      class=".export_forms.ExportRelations"
      permission="cmf.ManagePortal"
      />

  <browser:page
      name="export_members"
      for="zope.interface.Interface"
      class=".export_forms.ExportMembers"
      permission="cmf.ManagePortal"
      />

  <browser:page
      name="export_translations"
      for="zope.interface.Interface"
      class=".export_forms.ExportTranslations"
      permission="cmf.ManagePortal"
      />

  <browser:page
      name="export_localroles"
      for="zope.interface.Interface"
      class=".export_forms.ExportLocalRoles"
      permission="cmf.ManagePortal"
      />

  <!-- Serializers -->
  <adapter zcml:condition="installed Products.Archetypes"
      factory=".export_forms.ATFileFieldSerializer" />
  <adapter zcml:condition="installed Products.Archetypes"
      factory=".export_forms.ATImageFieldSerializer" />

  <adapter zcml:condition="installed plone.app.blob"
      factory=".export_forms.ATFileFieldSerializerWithBlobs" />
  <adapter zcml:condition="installed plone.app.blob"
      factory=".export_forms.ATImageFieldSerializerWithBlobs" />

  <adapter factory=".export_forms.FileFieldSerializerWithBlobs" />
  <adapter factory=".export_forms.ImageFieldSerializerWithBlobs" />
  <adapter factory=".export_forms.RichttextFieldSerializerWithRawText" />

  <browser:page
      name="import_content"
      for="zope.interface.Interface"
      class=".import_forms.ImportContent"
      template="templates/import_content.pt"
      permission="cmf.ManagePortal"
      />

</configure>
